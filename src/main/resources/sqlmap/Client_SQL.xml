<!-- 맵핑될 DAO 인터페이스의 Full name 을 줍니다. -->
<mapper namespace="com.tistory.pentode.service.dao.MemberDAO">


	<select id="selectById" resultType="MemberVO">
		<![CDATA[
		select
		 CACT, CNAME,  CSSN,  CCTN,  CMAIL, CPWD
		from 
		 CLIENT 
		where
		 CACT = #{id}
		 ]]>
	</select>
	
	<select id="insertClient" resultType="MemberVO">
		<![CDATA[
		insert into 
		 client 
		values(
		 CLIENT_SEQ.NEXTVAL,
		  #{CACT},
		   #{CNAME},
		  #{CSSN},
		   #{CCTN},
		    #{CMAIL},
		     #{CPWD},
		      0,
		       0)
		 ]]>
	</select>
	

	
